# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar DateTime

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type DepartmentTree {
  id: ID!
  name: String!
  code: String!
  ancestry: String!
  children: [DepartmentTree!]!
}

type User {
  id: ID!
  name: String!
}

type Version {
  id: ID!
  name: String!
  startedAt: DateTime!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Query {
  todos: [Todo!]!
  getDepartmentTree(id: ID!): [DepartmentTree!]!
  getVersion(id: ID!): Version!
  getVersions: [Version!]!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewVersion {
  name: String!
  startedAt: DateTime!
}

input UpdateVersion {
  id: ID!
  name: String!
  startedAt: DateTime!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createVersion(input: NewVersion!): Version!
  deleteVersion(id: ID!): Boolean!
  updateVersion(input: UpdateVersion!): Version!
}
